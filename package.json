{
  "name": "automation-chain",
  "version": "1.0.0",
  "description": "Modular Node.js application for content automation using pipeline architecture with LangChain",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "bun:dev": "bun run src/index.ts",
    "bun:start": "bun run dist/index.js",
    "bun:build": "bun build src/index.ts --outfile dist/bundle.js --target node",
    "bun:bundle": "bun build src/index.ts --outfile dist/bundle.js --target node --minify",
    "bun:start:bundle": "bun run dist/bundle.js"
  },
  "dependencies": {
    "@langchain/openai": "^0.0.14",
    "@langchain/core": "^0.1.17",
    "langchain": "^0.1.9",
    "node-telegram-bot-api": "^0.64.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/node-telegram-bot-api": "^0.64.0",
    "typescript": "^5.2.0",
    "ts-node": "^10.9.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0"
  },
  "keywords": ["automation", "pipeline", "nodes", "content-generation", "langchain"],
  "author": "",
  "license": "MIT"
} 