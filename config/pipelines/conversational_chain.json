{
  "name": "conversational_chain_pipeline",
  "description": "Generates conversational content with memory using LangChain",
  "schedule": "0 12 * * *",
  "nodes": [
    {
      "id": "conversational_generator",
      "type": "text_generator",
      "name": "Generate Conversational Content",
      "credentials": "default",
      "config": {
        "chain_type": "conversational",
        "memory": true,
        "prompt_template": "You are having a conversation about {topic}. Continue the conversation naturally and engagingly.",
        "model": "gpt-3.5-turbo",
        "max_tokens": 200,
        "temperature": 0.7
      }
    },
    {
      "id": "telegram_publisher",
      "type": "telegram_publisher",
      "name": "Publish to Telegram",
      "credentials": "conversational_bot",
      "config": {
        "message_template": "üí¨ *Conversation Update*\n\n{generated_text}\n\nü§ù Join the conversation!"
      }
    }
  ]
} 